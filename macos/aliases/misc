#  Miscellaneous
#  â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”

# ğŸ“¼ yt-dlp: Download videos and audio from YouTube and other sites 
alias rip="yt-dlp"
alias ripVideo="yt-dlp -f 'bestvideo' --recode-video mp4"  # ğŸ¥ Download best video quality
alias ripAudio="yt-dlp -f 'bestaudio' --recode-video mp4"  # ğŸµ Download best audio quality
alias subs="yt-dlp --recode-video mp4 --write-sub"  # ğŸ“ Download subtitles
alias ripPlaylist="yt-dlp -f 'bestaudio' --yes-playlist --recode-video mp4"  # ğŸ“¼ Download entire playlist

# ğŸŒ Internet utilities  
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"  # ğŸŒ Get public IP address  
alias flushdns="dscacheutil -flushcache && killall -HUP mDNSResponder"  # ğŸ”„ Flush DNS cache  

# ğŸ“ Open/close programs for video meetings  
alias mtg="open -a 'Audio Hijack' && open -a Zoom" 
alias mtgEnd="pkill 'Audio Hijack' && pkill Zoom" 

# ğŸ“‚ Navigation shortcuts  
alias ..="cd .."  # â¬†ï¸ Go up one directory  
alias ls="ls -GFh"  # ğŸ“œ List files with colors and human-readable sizes  

# ğŸ” WHOIS lookup  
# Use: `whois <domain.com>` to fetch domain info  
function whois() {
  command whois $(echo $1 | sed -e 's|https?://||' -e 's|/||g')
}

# ğŸš« Kill browser processes  
alias killchrome="ps ux | grep '[C]hrome Helper --type=renderer' | grep -v extension-process | tr -s ' ' | cut -d ' ' -f2 | xargs kill" 
alias killsafari="ps ux | grep '[S]afari' | tr -s ' ' | cut -d ' ' -f2 | xargs kill"
alias killfirefox="ps ux | grep '[F]irefox Nightly' | tr -s ' ' | cut -d ' ' -f2 | xargs kill"

# ğŸ—‘ï¸ Cleanup commands  
alias rm-empty='sudo find . -type d -empty -delete'  # Remove empty directories  
alias rm-large='find . -size +100M -exec rm -i {} \;'  # Remove files larger than 100MB  
alias rm-temp='find . -name "*.tmp" -exec rm -i {} \;'  # Remove temporary files
alias bigfiles="find . -type f -size +100M -exec ls -lh {} \; | awk '{print $9, $5}'"  # List large files with size

# ğŸ“‚ Zip commands
alias zipit="zip -r"  # Compress a folder: zipit archive.zip folder/
alias unzipit="unzip"  # Extract zip files

# ğŸ“– File viewing commands
alias peek="bat"  # Use bat (better cat) if installed
alias cat="bat --paging=never"  # Replace cat with bat if available

# ğŸ“‹ Todo.txt-cli commands
alias todo="todo.sh" # todo.sh to todo
alias t="todo.sh"  # Alias for todo.sh
alias tl="todo.sh list"  # List all todo items
alias ta="todo.sh add"  # Add a new todo item
alias td="todo.sh done"  # Mark a todo item as done

# ğŸŒ¤ï¸ Weather command
alias weather="wthrr && wthrr -f t"

# ğŸ›ï¸ Open Activity Monitor app
alias task="open -a 'Activity Monitor'"  
